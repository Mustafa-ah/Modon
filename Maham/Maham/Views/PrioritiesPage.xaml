                    <customcontrol:RoundedView  Grid.Column="1"
                                    Grid.Row="1"
                                    Margin="5"
                   BorderColor="{StaticResource lightgrey1 }"
                         BackgroundColor="{StaticResource WhiteColor}"
                   BorderRadius="{x:OnPlatform Android='10',iOS='5'}"
                    BorderThickness="1">
                        <Grid  Margin="0,0,0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="0.9*"/>
                            </Grid.ColumnDefinitions>
                            <customcontrol:RoundedView  Grid.Column="0"
                                      WidthRequest="1"
                                            BorderRadius="10"
                                            BorderThickness="3"
                                        BackgroundColor="{StaticResource purple}"
                                       />
                            <StackLayout Grid.Column="1" Padding="0" Spacing="0">
                                <Label HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Margin="0,6,0,0"
                           HorizontalTextAlignment="Center"
                           Text="{Binding ViewModel.Low.SectionName}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource drakgrey}"/>
                                <Label HorizontalOptions="Center"
                           VerticalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Text="{Binding ViewModel.Low.TasksCount}"
                           FontSize="48"
                           FontFamily="Cairo-Regular"
                           TextColor="{StaticResource purple}"/>
                                <Label HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Margin="0,-5,0,0"
                           HorizontalTextAlignment="Center"
                           Text="{transalte:Translate task}"
                           FontSize="16"
                           TextColor="{StaticResource purple}"/>
                                <Grid RowSpacing="0" VerticalOptions="FillAndExpand">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <customcontrol:RoundedView
                         Grid.Row="0"
                         Margin="10,5,10,0"
                        BorderRadius="{x:OnPlatform Android='10',iOS='5'}"
                       VerticalOptions="FillAndExpand"
                        BorderThickness="1"
                        BorderColor="{StaticResource lightgrey1}">
                                        <StackLayout Orientation="Horizontal" Spacing="1">

                                            <Label HorizontalOptions="Start"
                            VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           Text="{transalte:Translate DidnotStarted}"
                             
                           FontSize="9.6"
                                   Margin="5,0,5,0"
                           TextColor="{StaticResource drakgrey}"/>
                                            <Label HorizontalOptions="EndAndExpand"
                            VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           Text= "{Binding ViewModel.Low.NotStarted}"
                           
                           FontSize="8.4"
                           TextColor="{StaticResource grey4}"/>
                                            <Label HorizontalOptions="End"
                           VerticalOptions="Center"
                           Margin="1,0,5,0"
                           VerticalTextAlignment="Center"
                           Text="{transalte:Translate task}"
                           FontSize="8.4"
                           TextColor="{StaticResource grey4}"/>
                                        </StackLayout>
                                    </customcontrol:RoundedView>
                                    <customcontrol:RoundedView
                            Grid.Row="1"
                         Margin="10,3,10,0"
                        BorderRadius="{x:OnPlatform Android='10',iOS='5'}"
                        VerticalOptions="FillAndExpand"
                        BorderThickness="1"
                        BorderColor="{StaticResource lightgrey1}">
                                        <StackLayout Orientation="Horizontal" Spacing="1">

                                            <Label HorizontalOptions="Start"
                            VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           Text="{transalte:Translate InProgress}"
                             
                           FontSize="9.6"
                                   Margin="5,0,5,0"
                           TextColor="{StaticResource drakgrey}"/>
                                            <Label HorizontalOptions="EndAndExpand"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           Text= "{Binding ViewModel.Low.InProgress}"
                           
                           FontSize="8.4"
                           TextColor="{StaticResource grey4}"/>
                                            <Label HorizontalOptions="End"
                           VerticalOptions="Center"
                           Margin="1,0,5,0"
                           VerticalTextAlignment="Center"
                           Text="{transalte:Translate task}"
                           FontSize="8.4"
                           TextColor="{StaticResource grey4}"/>
                                        </StackLayout>
                                    </customcontrol:RoundedView>
                                    <customcontrol:RoundedView
                            Grid.Row="2"
                         Margin="10,3,10,0"
                        BorderRadius="{x:OnPlatform Android='10',iOS='5'}"
                        VerticalOptions="FillAndExpand"
                        BorderThickness="1"
                        BorderColor="{StaticResource lightgrey1}">
                                        <StackLayout Orientation="Horizontal" Spacing="1">

                                            <Label HorizontalOptions="Start"
                            VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           Text="{transalte:Translate returnedTask}"
                             
                           FontSize="9.6"
                                   Margin="5,0,5,0"
                           TextColor="{StaticResource drakgrey}"/>
                                            <Label HorizontalOptions="EndAndExpand"
                            VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           Text= "{Binding ViewModel.Low.Returned}"
                           
                           FontSize="8.4"
                           TextColor="{StaticResource grey4}"/>
                                            <Label HorizontalOptions="End"
                           VerticalOptions="Center"
                           Margin="1,0,5,0"
                           VerticalTextAlignment="Center"
                           Text="{transalte:Translate task}"
                           FontSize="8.4"
                           TextColor="{StaticResource grey4}"/>
                                        </StackLayout>
                                    </customcontrol:RoundedView>
                                    <customcontrol:RoundedView
                            Grid.Row="3"
                         Margin="10,3,10,0"
                        BorderRadius="{x:OnPlatform Android='10',iOS='5'}"
                        VerticalOptions="FillAndExpand"
                        BorderThickness="1"
                        BorderColor="{StaticResource lightgrey1}">
                                        <StackLayout Orientation="Horizontal" Spacing="1">

                                            <Label HorizontalOptions="Start"
                            VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           Text="{transalte:Translate Completed}"
                             
                           FontSize="9.6"
                                   Margin="5,0,5,0"
                           TextColor="{StaticResource drakgrey}"/>
                                            <Label HorizontalOptions="EndAndExpand"
                            VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           Text= "{Binding ViewModel.Low.Completed}"
                           
                           FontSize="8.4"
                           TextColor="{StaticResource grey4}"/>
                                            <Label HorizontalOptions="End"
                           VerticalOptions="Center"
                           Margin="1,0,5,0"
                           VerticalTextAlignment="Center"
                           Text="{transalte:Translate task}"
                           FontSize="8.4"
                           TextColor="{StaticResource grey4}"/>
                                        </StackLayout>
                                    </customcontrol:RoundedView>
                                    <customcontrol:RoundedView
                            Grid.Row="4"
                         Margin="10,5,10,0"
                        BorderRadius="{x:OnPlatform Android='10',iOS='5'}"
                        VerticalOptions="FillAndExpand"
                        BorderThickness="1"
                        BorderColor="{StaticResource lightgrey1}">
                                        <StackLayout Orientation="Horizontal" Spacing="1">

                                            <Label HorizontalOptions="Start"
                            VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           Text="{transalte:Translate Delayed}"
                             
                           FontSize="9.6"
                                   Margin="5,0,5,0"
                           TextColor="{StaticResource drakgrey}"/>
                                            <Label HorizontalOptions="EndAndExpand"
                            VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           Text= "{Binding ViewModel.Low.Delayed}"
                           
                                   
                           FontSize="8.4"
                           TextColor="{StaticResource grey4}"/>
                                            <Label HorizontalOptions="End"
                           VerticalOptions="Center"
                           Margin="1,0,5,0"
                           VerticalTextAlignment="Center"
                           Text="{transalte:Translate task}"
                           FontSize="8.4"
                           TextColor="{StaticResource grey4}"/>
                                        </StackLayout>
                                    </customcontrol:RoundedView>
                                </Grid>

                            </StackLayout>
                        </Grid>
                        <customcontrol:RoundedView.GestureRecognizers>
                            <TapGestureRecognizer  Command="{Binding ViewModel.TapCommand}" CommandParameter="{Binding ViewModel.Low}"/>
                        </customcontrol:RoundedView.GestureRecognizers>
                    </customcontrol:RoundedView>
                </Grid>
            </customcontrol:PullToRefreshLayout>
            <customcontrol:DisconnectedView 
                AbsoluteLayout.LayoutFlags="All"
                     AbsoluteLayout.LayoutBounds="0, 1, 1, 0.1"
                Text="{Binding NotConnectedMsg}"
                IsVisible="{Binding ViewModel.NotConnected}"/>
        </AbsoluteLayout>
    
</ContentPage>