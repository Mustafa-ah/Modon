<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             NavigationPage.HasNavigationBar="False"
             x:Class="Maham.Views.WelcomePage">
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
            Source="art_welcome"
            Aspect="AspectFit"
               HeightRequest="170"
               Margin="30,5,30,0"/>
        <StackLayout Grid.Row="1" Margin="30,10,30,0" >
            <Label VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center" Text="Welcome to Maham" 
                              TextColor="{StaticResource drakgrey}"
                              FontSize="20"
                              FontAttributes="Bold"/>
            <Label VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center" Text="Start your productive life now" 
                              TextColor="{StaticResource lightblue3}"
                              FontSize="20"
                    FontAttributes="Bold"
                           />

        </StackLayout>

    </Grid>
</ContentPage>